{
  "name": "follow-service",
  "version": "1.0.0",
  "description": "Microservice for managing follow/unfollow relationships",
  "main": "dist/server.js",
 "scripts": {
  "dev": "ts-node-dev --respawn src/server.ts",
  "build": "tsc",
  "prestart": "npm run build",
  "start": "node dist/server.js",
  "test": "jest",
  "test:watch": "jest --watch",
  "test:coverage": "jest --coverage",
